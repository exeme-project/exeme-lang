AllowShortIfStatementsOnASingleLine: Never
AlignAfterOpenBracket: Align
AlignConsecutiveAssignments: true
AlignConsecutiveDeclarations: true
AlignConsecutiveMacros: true
AlignTrailingComments: true
BreakBeforeBinaryOperators: NonAssignment  # Keep assignments visually aligned.
BreakBeforeBraces: Attach
BreakConstructorInitializers: BeforeColon
ColumnLimit: 100  # Adjust to balance line length and readability.
ContinuationIndentWidth: 4
EmptyLineBeforeAccessModifier: Always
IncludeBlocks: Preserve     # Preserves grouping with blank lines.
IndentWidth: 4
InsertNewlineAtEOF: true
PointerAlignment: Left
PenaltyBreakComment: 300
PenaltyBreakFirstLessLess: 0
PenaltyBreakString: 100
ReflowComments: true
SortIncludes: CaseSensitive          # Enables sorting of includes.
SpaceBeforeParens: ControlStatements
SpacesInParentheses: false
TabWidth: 4
UseTab: Always
