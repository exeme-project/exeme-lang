{
	"[c]": {
		"editor.defaultFormatter": "xaver.clang-format"
	},
	"[cpp]": {
		"editor.defaultFormatter": "xaver.clang-format"
	},
	"[h]": {
		"editor.defaultFormatter": "xaver.clang-format"
	},
	"c-cpp-flylint.cppcheck.enable": true,
	"c-cpp-flylint.cppcheck.verbose": false,
	"c-cpp-flylint.flawfinder.enable": true,
	"c-cpp-flylint.flexelint.enable": false,
	"c-cpp-flylint.enable": true,
	"c-cpp-flylint.clang.enable": false,
	"c-cpp-flylint.lizard.enable": true,
	"clangd.arguments": [
		"--header-insertion=never"
	],
	"cmake.preferredGenerators": [
		"Ninja",
		"Visual Studio 17 2022",
	],
	"cSpell.language": "en-GB",
	"cSpell.words": [
		"ASTTOKENS",
		"Exeme",
		"LEXERTOKENS",
		"OSSF",
		"Unlexes",
		"Wvoid"
	],
	"editor.bracketPairColorization.enabled": true,
	"editor.cursorBlinking": "smooth",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.fontFamily": "Fira Code",
	"editor.fontLigatures": true,
	"editor.fontSize": 11,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"editor.detectIndentation": false,
	"editor.guides.bracketPairs": true,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.smoothScrolling": true,
	"editor.suggest.localityBonus": true,
	"files.associations": {
		"*.clang-tidy": "plaintext"
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"git.enableCommitSigning": true,
	"git.enableSmartCommit": true,
	"git.confirmSync": false,
	"git.autofetch": true,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyleInactive": "block",
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.fontFamily": "Fira Code",
	"terminal.integrated.fontSize": 11,
	"terminal.integrated.smoothScrolling": true,
	"workbench.colorTheme": "Horizon Legacy",
	"workbench.iconTheme": "minimal-icon-theme",
	"workbench.list.smoothScrolling": true,
}
